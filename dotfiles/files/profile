# Adds dir for where homebrew applications get installed to if exists
[[ -e /opt/homebrew/bin ]] && export PATH="/opt/homebrew/bin:$PATH"

# Adds /usr/local dirs to path if exist
[[ -e /usr/local/bin ]] && export PATH="/usr/local/bin:$PATH"
[[ -e /usr/local/sbin ]] && export PATH="/usr/local/sbin:$PATH"


# Configure & Autoload nvm
#
# Note: we have two different options for loading nvm because it
# can be installed in multiple locations on the filesystem
export NVM_DIR="$HOME/.nvm"

if [[ -e /opt/homebrew/opt/nvm ]]; then
  [ -s "/opt/homebrew/opt/nvm/nvm.sh" ] && \. "/opt/homebrew/opt/nvm/nvm.sh"  # This loads nvm
  [ -s "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm" ] && \. "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm"  # This loads nvm bash_completion
fi

if [[ -e /usr/local/opt/nvm ]]; then
  [ -s "/usr/local/opt/nvm/nvm.sh" ] && \. "/usr/local/opt/nvm/nvm.sh"  # This loads nvm
  [ -s "/usr/local/opt/nvm/etc/bash_completion.d/nvm" ] && \. "/usr/local/opt/nvm/etc/bash_completion.d/nvm"  # This loads nvm bash_completion
fi
